<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_selected</item>
    </style>
    <style name="Text2">
        <item name="fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DropdowmStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#EBEBEB</item>
        <item name="boxStrokeColor">#F5F5F9</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Animation.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
</resources>